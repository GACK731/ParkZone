<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <!-- Cloud Background Image -->
    <ImageView

        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/upside_down_white"
        app:layout_constraintBaseline_toTopOf="parent"
        app:layout_constraintDimensionRatio="1:1"/>

    <!-- Profile Section -->
    <LinearLayout
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="60dp"
        android:paddingHorizontal="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Profile Image Container -->
        <FrameLayout
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@drawable/blue_circle">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:src="@drawable/icon_placeholder"
                android:scaleType="centerCrop"
                app:tint="@color/theme_color" />

        </FrameLayout>

        <!-- Name -->
        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Chamodi Kavishka"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

        <!-- Email -->
        <TextView
            android:id="@+id/tv_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Chamodi@gmail.com"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:alpha="0.7" />

    </LinearLayout>

    <!-- Menu Items Container -->
    <LinearLayout
        android:id="@+id/menu_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="160dp"
        android:layout_marginHorizontal="40dp"
        app:layout_constraintTop_toBottomOf="@id/profile_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Account Setting -->
        <LinearLayout
            android:id="@+id/btnAccountSetting"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_button"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/setting_icon"
                app:tint="@color/theme_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Account Setting"
                android:textColor="@android:color/black"
                android:fontFamily="@font/inter_bold"
                android:textSize="16sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!-- Favourite parks -->
        <LinearLayout
            android:id="@+id/btnFavouriteParks"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_button"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/favourite_icon"
                app:tint="@color/theme_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Favourite parks"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold"/>

        </LinearLayout>

        <!-- Add parking place -->
        <LinearLayout
            android:id="@+id/btnAddPark"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_button"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/location_icon"
                app:tint="@color/theme_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Add parking place"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold" />

        </LinearLayout>

        <!-- Parking Countdown -->
        <LinearLayout
            android:id="@+id/btnCountDown"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_button"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/timer_icon"
                app:tint="@color/theme_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="Parking Countdown"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold" />

        </LinearLayout>

        <!-- About Us -->
        <LinearLayout
            android:id="@+id/btnAboutUs"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/search_button"
            android:layout_marginBottom="8dp"
            android:paddingHorizontal="20dp"
            android:clickable="true"
            android:focusable="true">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/aboutus_icon"
                app:tint="@color/theme_color" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:text="About Us"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:fontFamily="@font/inter_bold" />

        </LinearLayout>

        <com.google.android.material.button.MaterialButton
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"
            android:fontFamily="@font/inter_bold"
            android:text="Log Out"
            android:textSize="20sp"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp"

            />

    </LinearLayout>

    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/back_icon"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="4dp"
        android:elevation="8dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/theme_color" />

</androidx.constraintlayout.widget.ConstraintLayout>
